<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jjbeck.flixster.MovieDetailActivity">

    <!-- @drawable/large_movie_poster sourced from
            android:maxWidth="342dp"
            android:gravity="bottom"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
         http://content8.flixster.com/movie/11/15/86/11158674_pro.jpg -->
    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/poster_placeholder_large" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_below="@+id/ivDetailImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivDetailImage"
        android:text="Title TBD"
        android:textStyle="bold|italic"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/rbStars"
        android:layout_below="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:numStars="5"
        android:stepSize=".5"
        android:rating="2.0"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_below="@+id/rbStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitle"
        android:text="Release Date: TBD"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvVoteScore"
        android:layout_below="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitle"
        android:text="Stars: TBD"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvVoteCount"
        android:layout_toRightOf="@+id/tvVoteScore"
        android:layout_alignTop="@+id/tvVoteScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" 
        android:text="Votes: TBD"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPopularity"
        android:layout_below="@+id/tvVoteScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitle"
        android:text="Popularity: TBD"
        android:textSize="14sp" />


    <ScrollView
        android:layout_below="@+id/tvPopularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview TBD" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
